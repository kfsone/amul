#! /bin/sh

chmod -f +x make-revision.py
if test ! -d build ; then
 mkdir build || { echo "FAIL: Unable to create 'build' directory." ; exit 0 ; }
fi
cd build || { echo "FAIL: Unable to create/access 'build' directory." ; exit 0 ; }
cmake -DCMAKE_BUILD_TYPE=Debug -G "Unix Makefiles" .. || { echo "FAIL: Unable to generate Makefiles with cmake [check cmake is installed]" ; exit 0 ; } 
echo "To build, execute the command 'make' from inside the build directory."

