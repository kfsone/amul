# $Id: Makefile.in,v 1.8 1997/05/22 02:21:33 oliver Exp $
# makefile for smuglcom, game compiler
#

SHELL = /bin/sh

# Default target
all::

EXES   = smuglcom verify
VER    = SMUGLCOM
SRCS   = smuglcom.cpp  langproc.cpp  objproc.cpp   smsgproc.cpp \
         travfunc.cpp  mobproc.cpp   synsproc.cpp  travproc.cpp \
         cleanup.cpp   filebits.cpp  obdsproc.cpp  roomproc.cpp \
         titleproc.cpp umsgproc.cpp  basicobjs.cpp errors.cpp   \
         msgmgt.cpp    misc.cpp      vocab.cpp
OBJS   = $(SRCS:.cpp=.o)

include @top_srcdir@/include/Makefile

smuglcom: $(OBJS)  $(SMUGLLIB) version.o
	$(CXX) -o $@ @CFLAGS@ $(OBJS) version.o $(LIBS)

verify:	verify.cpp $(SMUGLLIB)
	$(CXX) -o $@ $(ALL_CFLAGS) $< $(LIBS)

install:: $(EXES)
	$(INSTALL_PROGRAM) -c $(EXES) $(bindir)

install-strip:: $(EXES)
	$(INSTALL_PROGRAM) -c -s $(EXES) $(bindir)

include Makefile.dep
