# Makefile for building the game

SHELL    = /bin/sh

COMPILER = @bindir@/smuglcom
FRAME    = @bindir@/smugl
GAMEDIR  = @srcdir@

all:
	@[ ! -x "$COMPILER" ] && echo "Error: Game compiler not installed" && exit
	$(COMPILER) $(GAMEDIR)
	$(FRAME) $(GAMEDIR)

clean:
	rm -rf Data

distclean: clean
	rm Makefile
	
